<section id="dashboard">
    <div class="row justify-content-center">
        <h2 class="col-md-8">Your Dashboard</h2>
    </div>
    {{#unless noPosts}}
    <div class="row justify-content-center mt-4">
        <h4 class="col-md-8">Current Posts</h4>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
        <div id="userPosts" class="list-group">
            {{> dashPost}}
        </div>
        </div>
    </div>
    {{/unless}}
    {{#if noPosts}}
    <div class="row justify-content-center mt-4">
        <h4 class="col-md-8">You don't have any posts yet!</h4>
    </div>
    {{/if}}
    <div class="row justify-content-center mt-3">
        <div class="col-md-8">
        <button type="button" id="newPostBtn" class="btn btn-primary">Create New Post</button>
        </div>        
    </div>
</section>