<section id="singlePost" class="mt-5">
    <div class="row justify-content-center">
        <div id="postHead" class="col-md-8">
            <h3>{{post.post_title}}</h3>
            <p>by {{post.user.username}} on {{format_date post.createdAt}}</p>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div id="postBody" class="col-md-8">
            {{post.post_body}}
        </div>
    </div>
    <div id="comments" class="row justify-content-center mt-5">
        <div class="col-md-8">
            <h5>Comments</h5>
            {{> comments}}
        </div>
    </div>
    
</section>